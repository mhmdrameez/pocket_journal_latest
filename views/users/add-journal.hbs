<section class="bg-secondary">
    <div class=" container-fluid">
        <div class="section ">
            <div class="l-section col-3 p-3 bg-dark ">
                <div class="search-bar ">
                    <input type="text" class="my-2"
                        style="text-decoration:none;width:100%;font-size:20px;text-align:center;height:40px; border-radius:20px;border:2px solid rgb(71, 71, 71) ;"
                        placeholder="Search" class="form-control " name="search">
                </div>
